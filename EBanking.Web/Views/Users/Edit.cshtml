@using EBanking.Web.Models.Users
@model UserEditViewModel

<h2>
    Izmeni korisnika
</h2>

@if (string.IsNullOrWhiteSpace(ViewBag.ErrorMessage) == false)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

@if (string.IsNullOrWhiteSpace(ViewBag.SuccessMessage) == false)
{
    <div class="alert alert-info" role="alert">
        @ViewBag.SuccessMessage
    </div>
}


<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="FirstName" class="control-label"></label>
        <input class="form-control" asp-for="FirstName" />
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class=></label>
        <input class="form-control" asp-for="LastName" />
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class=></label>
        <input class="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="OldPassword" class=></label>
        <input class="form-control" asp-for="OldPassword" />
        <span class="text-danger" asp-validation-for="OldPassword"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewPassword" class=></label>
        <input class="form-control" asp-for="NewPassword" />
        <span class="text-danger" asp-validation-for="NewPassword"></span>
    </div>
    <button type="submit" class="btn btn-primary">Sacuvaj korisnika</button>
</form>
